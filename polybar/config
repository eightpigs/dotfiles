[module/xwindow]
type = internal/xwindow
label = %title:0:200:...%
label-foreground = #333333

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

ws-icon-0 = 1;%{T2}
ws-icon-1 = 2;%{T4}
ws-icon-2 = 3;%{T2}
ws-icon-3 = 4;%{T4}
ws-icon-4 = 5;%{T4}
ws-icon-5 = 6;%{T4}
ws-icon-6 = 7;7
ws-icon-7 = 8;%{T4}
ws-icon-8 = 9;%{T4}
ws-icon-9 = 10;%{T4}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.primary-bg}
label-focused-underline = ${colors.primary}
label-focused-padding = 4

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 4
label-unfocused-foreground = ${colors.foreground-alt}

; visible = Active workspace on unfocused monitor
label-visible = %index%. %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%. %icon%
label-urgent-background = ${colors.primary}
label-urgent-padding = 4

[module/eth]
type = internal/network
interface = eno2
interval = 0.5
label-connected = %{T2}%{T-} %upspeed% %downspeed%
label-connected-foreground = ${colors.fg-04}
label-connected-background = ${colors.bg-04}
label-connected-padding = 4

label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.fg-04}
label-disconnected-background = ${colors.bg-04}

[module/date]
type = internal/date
interval = 1.0
date = %{T2} %{T-} %d,%H:%M
date-alt = %{T2} %{T-} %A,%d %B %Y
