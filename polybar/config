background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #FF0000
alert = #bd2c40

[bar/example]
monitor = ${env:MONITOR:DP-4}
width = 100%
height = 50
radius = 8.0
fixed-center = true
top = true

;override-redirect = true
offset-x = 17 
offset-y = 10

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 5
line-color = #f00

;border-size = 10
;border-color = #FFFFFF

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

;; fc-cache -f -v 
;; gucharmap
;; font-0 = Roboto:size=16;2
font-0 = Monaco:size=16;2
