alias ll="ls -alsHh"
alias cat="bat --style=numbers --color=always"
alias top=htop
alias ssh='TERM=xterm ssh'

alias proxylup='export http_proxy=http://127.0.0.1:8001;export https_proxy=$http_proxy'
alias proxyrup='export http_proxy=http://192.168.2.4:8890;export https_proxy=$http_proxy'
alias proxydown='unset http_proxy;unset https_proxy'



alias remoteAdbDebug='adb shell setprop service.adb.tcp.port 5555'

